<div class="container mt-4">
    <h1>TODO編集</h1>

    <div class="card mb-3">
        <div class="card-body">
            <%= form_with(model: @todo, local: true) do |f| %>
                <div class="mb-3">
                    <%= f.label :title, 'タイトル', class: 'form-label' %>
                    <%= f.text_field :title, class: 'form-control' %>
                </div>

                <div class="mb-3">
                    <%= f.label :description, '説明', class: 'form-label' %>
                    <%= f.text_area :description, class: 'form-control' %>
                </div>

                <div class="form-check mb-3">
                    <%= f.check_box :completed, class: 'form-check-input' %>
                    <%= f.label :completed, '完了', class: 'form-check-label' %>
                </div>

                <%= f.submit '更新する', class: 'btn btn-primary' %>
                <%= link_to 'キャンセル', todos_path, class: 'btn btn-secondary ms-2' %>
            <% end %>
        </div>
    </div>
</div>
