<div>
<h1>Todo List</h1>

<%= link_to "タスクを追加する", new_todo_path %>

<table>
    <thead>
    <tr>
        <th>タスク</th>
    </tr>
    </thead>
    <tbody>
    <% @todos.each do |todo| %>
        <tr>
        <td><%= todo.title %></td>
        <td>
            <%= link_to "編集", edit_todo_path(todo) %>
            <%= link_to "削除", todo_path(todo), data: { turbo_method: :delete } %>
        </td>
        </tr>
    <% end %>
    </tbody>
</table>
</div>

